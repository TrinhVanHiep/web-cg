{{ 'card-contact.css' | asset_url | stylesheet_tag }}
<script>
function openModal() {
  document.getElementById('contactModal').style.display = 'block';
}

function closeModal() {
  document.getElementById('contactModal').style.display = 'none';
}
</script>

<div class="card-contact-container">
  <div class="page-width section-{{ section.id }}-padding">
    <h1 class="card-contact-title">{{section.settings.title}}</h1>
    <div class="experts-container">
      <div class="expert-card">
        <img
          src="{{ section.settings.img_1 | image_url: width: 394 }}"
          class="expert-image"
          alt="{{ item.image.alt | escape }}"
          loading="lazy"
          width="394"
          height="{{ 525 | divided_by: item.image.aspect_ratio | ceil }}">
        <div class="expert-info">
          <h3 class="expert-name">{{ section.settings.heading_1 }}</h3>
          <p class="expert-position">{{ section.settings.sub_heading_1 }}</p>
          <button class="contact-btn" onclick="openModal()">{{section.settings.text_button}}</button>
        </div>
      </div>
      <div class="expert-card">
        <img
          src="{{ section.settings.img_2 | image_url: width: 394 }}"
          class="expert-image"
          alt="{{ item.image.alt | escape }}"
          loading="lazy"
          width="394"
          height="{{ 525 | divided_by: item.image.aspect_ratio | ceil }}">
        <div class="expert-info">
          <h3 class="expert-name">{{ section.settings.heading_2 }}</h3>
          <p class="expert-position">{{ section.settings.sub_heading_2 }}</p>
          <button class="contact-btn" onclick="openModal()">{{section.settings.text_button}}</button>
        </div>
      </div>
      <div class="expert-card">
        <img
          src="{{ section.settings.img_3 | image_url: width: 394 }}"
          class="expert-image"
          alt="{{ item.image.alt | escape }}"
          loading="lazy"
          width="394"
          height="{{ 525 | divided_by: item.image.aspect_ratio | ceil }}">
        <div class="expert-info">
          <h3 class="expert-name">{{ section.settings.heading_3 }}</h3>
          <p class="expert-position">{{ section.settings.sub_heading_3 }}</p>
          <button class="contact-btn" onclick="openModal()">{{section.settings.text_button}}</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal Popup for Contact -->
<div id="contactModal" class="modal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeModal()">&times;</span>
    <h2>Đăng ký nhận tư vấn</h2>
    <!-- Include contact form here -->
    {% include 'contact-form' %}
  </div>
</div>
{% schema %}
