    "name": "t:sections.collection-list.name",
    "tag": "section",
    "class": "section section-collection-list",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "text",
        "id": "title",
        "default": "Chuyên gia của chúng tôi",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "img_1",
        "label": "chuyên gia 1 "
      },
      {
        "type": "text",
        "id": "heading_1",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "sub_heading_1",
        "label": "Subheading"
      }, {
        "type": "image_picker",
        "id": "img_2",
        "label": "Banner"
      }, {
        "type": "text",
        "id": "heading_2",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "sub_heading_2",
        "label": "Subheading"
      }, {
        "type": "image_picker",
        "id": "img_3",
        "label": "Banner"
      }, {
        "type": "text",
        "id": "heading_3",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "sub_heading_3",
        "label": "Subheading"
      }, {
        "type": "text",
        "id": "text_button",
        "label": "textButton"
      }
    ],
    "presets": [
    {
      "name": "liên hệ dịch vụ"
    }
  ]
  }
{% endschema %}